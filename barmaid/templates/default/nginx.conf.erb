upstream unicorn_server_<%= @app_name %> {
  server unix:/<%= node[:unicorn][:rundir] %>/unicorn_<%= @app_name %>.sock fail_timeout=0;
}

server {
  listen 9292;
  server_name <%= @domain %>;

  <% if @htpasswd %>
  auth_basic "Barmaid Restricted Access";
  auth_basic_user_file <%= node[:nginx][:dir] %>/htpasswd.d/barmaid.htpasswd;
  <% end -%>

  location / {
    include <%= "#{node[:nginx][:dir]}/common/proxy.conf" %>;
    proxy_pass http://unicorn_server_<%= @app_name %>;
  }
}
