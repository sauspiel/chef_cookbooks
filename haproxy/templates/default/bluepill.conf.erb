require 'fileutils'
FileUtils.mkdir_p "/var/run/haproxy"

Bluepill.application("<%= @full_name %>", :log_file => "<%= node[:bluepill][:log_dir] %>/<%= @full_name %>.log") do |app|
  app.process("<%= @short_name %>") do |process|
    process.start_command = "/usr/sbin/haproxy -D -f /etc/haproxy/<%= @short_name %>.conf"
    process.stop_command = "/bin/kill -SIGUSR1 {{PID}}"
    process.restart_command = "/usr/sbin/haproxy -D -f /etc/haproxy/<%= @short_name %>.conf -sf {{PID}}"
    process.pid_file = "/var/run/haproxy/<%= @short_name %>.pid"
    process.stdout = process.stderr = "/var/log/haproxy.log"
  end
end
