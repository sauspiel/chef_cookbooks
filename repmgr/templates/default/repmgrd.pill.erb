# generated by chef for <%= node[:fqdn] %>

Bluepill.application("repmgrd", :log_file => "<%= node[:bluepill][:log_dir] %>/bluepill.log") do |app|
  app.working_dir = "/var/tmp"
  app.process("repmgrd") do |process|
    process.start_command = "/usr/bin/repmgrd -f <%= node[:repmgr][:config] %> --verbose >> <%= node[:repmgr][:log] %> 2>&1"
    process.stop_command = "/usr/bin/pkill repmgrd"
    process.stdout = process.stderr = "<%= node[:repmgr][:log] %>"
    process.uid = "root"
    process.gid = "root"
    process.daemonize = true
  end
end
