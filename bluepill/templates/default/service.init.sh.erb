#!/bin/sh
#
# This file was generated by chef for <%= @node[:fqdn] %>
#
### BEGIN INIT INFO
# Provides: <%= @service %>
# Required-Start: $network $remote_fs $syslog $local_fs
# Required-Stop: $network $remote_fs $syslog $local_fs
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Starts the <%= @service %> application
### END INIT INFO

bp=<%= @bppath %>
cmd=`basename $0`

case "$1" in
  start)
    echo -n "Starting $0"
    $bp load <%= @conf_dir %>/$cmd.pill
    ;;
  stop)
    echo -n "Stopping down $0"
    $bp $cmd stop
    ;;
  restart)
    echo -n "Restarting $0"
    $0 stop
    $0 start
    ;;
  status)
    $bp $cmd status
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|status}"
    exit 1
    ;;
esac
