<%= @p[:files].to_a.join("\n") %> {
    <% if @p[:size_limit] %>
	size <%= @p[:size_limit] %>
	<% else %>
	<%= @p[:frequency] %>
	<% end %>
	rotate <%= @p[:rotate_count] %>
	<% if @p[:compress] %>
	dateext
	compress
	delaycompress
	<% end %>
	<% if @p[:user] %>
  create 640 <%= @p[:user] %> <%= @p[:group] %>
  <% end %>
	<% if @p[:missing_ok] %>
	missingok
	<% end %>
	<% %>
	<% if !@p[:rotate_if_empty] %>
	notifempty
	<% end %>
	sharedscripts
	postrotate
	<%= @p[:restart_command] %>
	endscript
}