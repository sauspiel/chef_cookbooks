server {
  listen 80;
  server_name localhost;

  location / {
    root /usr/share/nginx/html;
    index index.html index.htm;
  }

  <% if @with_stats %>
  location /nginx_status {
    stub_status on;
    access_log off;
    allow 127.0.0.1;
    deny all;
  }
  <% end -%>

  location = /50x.html {
    root /usr/share/nginx/html;
  }
}
